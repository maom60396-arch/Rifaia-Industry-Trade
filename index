    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // إعدادات مكتبة الحركة
        AOS.init({ duration: 800, easing: 'cubic-bezier(0.25, 0.8, 0.25, 1)', once: true, mirror: false, offset: 120 });

        // إخفاء شاشة التحميل
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.body.classList.add('loaded');
            }, 2000);
        });

        // وظيفة الزر الذكي للتواصل
        function toggleContactMenu() {
            const container = document.getElementById('contactHub');
            const btn = container.querySelector('.main-action-btn');
            container.classList.toggle('open');
            btn.classList.toggle('active');
            
            const icon = btn.querySelector('i');
            if (container.classList.contains('open')) {
                icon.classList.remove('fa-headset');
                icon.classList.add('fa-times');
            } else {
                icon.classList.remove('fa-times');
                icon.classList.add('fa-headset');
            }
        }
    </script>
